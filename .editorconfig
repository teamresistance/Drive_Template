# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_size = 4
indent_style = space
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
guidelines = 120

# JSON files
[*.{json,yml}]
indent_size = 2

# Markdown
[*.md]
charset = utf-8
indent_style = space
indent_size = 2
quote_type = single

# Java
[*.java]
indent_size = 2

# Ignore
[src/main/deploy/**]
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset
